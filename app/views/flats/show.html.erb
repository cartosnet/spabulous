<h1 class="text-center">Your selected flat</h1>
<div class="container text-center">
  <div class="row">
    <ul>
      <li><%= @flat.name %></li>
      <li><%= @flat.address %></li>
      <li><%= @flat.description %></li>
      <li><%= @flat.price_day %></li>
      <li><%= @flat.petals %></li>
      <li><%= @flat.massage_kit %></li>
      <li><%= @flat.champagne %></li>
    </ul>
  </div>
  <div class="row">
    <div class="col-xs-4 ">
     <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= @flat.photo_1 %>');">
     </div>
    </div>
    <div class="col-xs-4 ">
      <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= @flat.photo_2 %>');">
      </div>
    </div>
    <div class="col-xs-4 ">
      <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= @flat.photo_3 %>');">
      </div>
    </div>
  </div>

  <div class="row">
    <%= link_to 'Book this Flat', new_flat_booking_path(@flat) %>
  </div>
</div>
